---
import Page from "../layouts/Page.astro";
import {EMAIL} from "@constants";
---

<Page title="404" description="The requested page could not be found." contentType="text">
    <div class="container inconsolata">
    <h1>404</h1>
    
    <p><strong>Page not found :(</strong></p>
    <p>Please contact me at <a href={`mailto:${EMAIL}`}>{EMAIL}</a> if this is an error.</p>
    <a href="/">Return to homepage</a>
    </div>
  </Page>
<style>
    .container {
      margin: 10px auto;
      max-width: 600px;
      text-align: center;
    }
    h1 {
      margin: 30px 0;
      font-size: 4em;
      line-height: 1;
      letter-spacing: -1px;
    }
</style>
    